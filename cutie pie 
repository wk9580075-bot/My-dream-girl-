  </audio>

  <!-- Confetti -->
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

  <script>
    // === TUM YAHAN EDIT KARO ===
    const BOY_NAME = "Rahul";          // Apna naam
    const GIRL_NAME = "Priya";         // Uska naam
    const SECRET_CODE = "0608";        // 6 August 2025 ‚Üí 0608
    const WHATSAPP_NUMBER = "+919876543210"; // TUMHARA WHATSAPP NUMBER (international format)
    // ===========================

    let noCount = 0;

    // Unlock
    function unlock() {
      const input = document.getElementById('secretCode').value;
      if (input === SECRET_CODE) {
        document.getElementById('lockScreen').style.display = 'none';
        document.getElementById('mainContent').style.display = 'block';
        animateNames();
        playMusic();
      } else {
        document.getElementById('error').innerText = "Galat code! Hint: 06/08/2025";
      }
    }

    // Animate Names
    function animateNames() {
      const name1 = document.getElementById('name1');
      const name2 = document.getElementById('name2');
      
      [...BOY_NAME].forEach((char, i) => {
        const span = document.createElement('span');
        span.classList.add('letter');
        span.innerHTML = char === ' ' ? '&nbsp;' : char;
        span.style.animationDelay = `${i * 0.1}s`;
        if (Math.random() > 0.5) span.classList.add('heart-letter');
        name1.appendChild(span);
      });

      [...GIRL_NAME].forEach((char, i) => {
        const span = document.createElement('span');
        span.classList.add('letter');
        span.innerHTML = char === ' ' ? '&nbsp;' : char;
        span.style.animationDelay = `${(BOY_NAME.length + i) * 0.1}s`;
        if (Math.random() > 0.5) span.classList.add('heart-letter');
        name2.appendChild(span);
      });
    }

    // Play Music (User click ke baad)
    function playMusic() {
      document.body.addEventListener('click', function() {
        const audio = document.getElementById('loveSong');
        audio.play().catch(() => {});
      }, { once: true });
    }

    // YES ‚Üí TUMHE WHATSAPP PE MESSAGE AAYEGA!
    function sayYes() {
      confetti({ particleCount: 200, spread: 70, origin: { y: 0.6 } });
      setTimeout(() => confetti({ particleCount: 100, angle: 60, spread: 55, origin: { x: 0 } }), 200);
      setTimeout(() => confetti({ particleCount: 100, angle: 120, spread: 55, origin: { x: 1 } }), 400);

      // TUMHE NOTIFICATION BHJEGA
      const message = encodeURIComponent(`${GIRL_NAME} ne HAAN bola! ‚ù§Ô∏è Website se accept kiya!`);
      const waLink = `https://api.whatsapp.com/send?phone=${WHATSAPP_NUMBER}&text=${message}`;
      window.open(waLink, '_blank');

      document.querySelector('h2').innerHTML = 
        `<h1 style="color:#fff; animation: glow 1s infinite alternate;">
          üéâ YES! AB HUM HAMESHA SAATH! üéâ
         </h1>`;
    }

    // NO (Cute wala)
    function sayNo() {
      noCount++;
      const btn = document.querySelector('.no-btn');
      btn.innerText = noCount === 1 ? "Pakka?" : noCount === 2 ? "Soch lo!" : "Ab HAAN hi bol do na! ü•∫";
      btn.style.transform = `translate(${Math.random()*100-50}px, ${Math.random()*100-50}px)`;
      if (noCount > 3) {
        btn.style.display = 'none';
        document.querySelector('.yes-btn').innerText = "Bas HAAN hi option hai! üòò";
      }
    }

    // Dark Mode
    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
    }
  </script>
